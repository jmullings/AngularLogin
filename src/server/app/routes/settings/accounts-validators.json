{
    "validators": [
        {
            "name": "create",
            "schema": {
                "name": {
                    "notEmpty": true,
                    "isLength": {
                        "errorMessage": "Must be at least 3 chars long",
                        "options": [{"min": 3}]
                    }
                },
                "email": {
                    "notEmpty": true,
                    "isEmail": {
                        "errorMessage": "Invalid Email"
                    }
                },
                "password": {
                    "notEmpty": true,
                    "isLength": {
                        "errorMessage": "Must be between 8 and 64 chars long",
                        "options": [{"max": 64, "min": 8}]
                    }
                }
            }
        }, {
            "name": "edit",
            "schema": {
                "name": {
                    "notEmpty": true,
                    "isLength": {
                        "errorMessage": "Must be at least 3 chars long",
                        "options": [{"min": 3}]
                    }
                },
                "email": {
                    "notEmpty": true,
                    "isEmail": {
                        "errorMessage": "Invalid Email"
                    }
                }
            }
        }, {
            "name": "activate",
            "schema": {
                "token": {
                    "notEmpty": true
                }
            }
        }, {
            "name": "resetPassword",
            "schema": {
                "token": {
                    "notEmpty": true
                },
                "password": {
                    "notEmpty": true,
                    "isLength": {
                        "errorMessage": "Must be between 8 and 64 chars long",
                        "options": [{"max": 64, "min": 8}]
                    }
                }
            }
        }, {
            "name": "login",
            "schema": {
                "email": {
                    "notEmpty": true,
                    "isEmail": {
                        "errorMessage": "Invalid Email"
                    }
                },
                "password": {
                    "notEmpty": true
                }
            }
        }
    ]
}
